<Window x:Class="FashionStoreManagement.Pages.DetailsWindow.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FashionStoreManagement.Pages.DetailsWindow"
        mc:Ignorable="d"
        Title="Product Details" Height="480" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        ResizeMode="NoResize" FontFamily="Poppins">

    <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="8" BorderBrush="{DynamicResource SecundaryBackgroundColor}" BorderThickness="1" Height="480" VerticalAlignment="Center">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource btnClose}" IsCancel="True"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Panel.ZIndex="1"/>

            <TextBlock x:Name="lblTitle" Text="Add New Product" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextColor}" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Product ID:" Style="{DynamicResource TextBlockStyle}"/>
            <TextBox Grid.Row="1" Grid.Column="1"  x:Name="txtProductId" Style="{DynamicResource TextBoxStyle}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Name:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtProductName" Style="{DynamicResource TextBoxStyle}" Margin="0,15,0,0" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Category:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtCategory" Style="{DynamicResource TextBoxStyle}" Margin="0,15,0,0" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Price:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtPrice" Style="{DynamicResource TextBoxStyle}" Margin="0,15,0,0"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Quantity:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtQuantity" Style="{DynamicResource TextBoxStyle}" Margin="0,15,0,0"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Description:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0" VerticalAlignment="Top"/>
            <TextBox Grid.Row="6" x:Name="txtDescription" Style="{DynamicResource TextBoxStyle}" Margin="78,0,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Height="73"/>

            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="285">
                <Button x:Name="btnSave" Style="{StaticResource addButton}" Content="Save" Click="btnSave_Click"  Width="100" Margin="10,10,10,0" />

                <Button x:Name="btnCancel" Style="{StaticResource addButton}" Content="Cancel" IsCancel="True"  Width="100" Margin="10,10,10,0" />

            </StackPanel>

        </Grid>
    </Border>
</Window>