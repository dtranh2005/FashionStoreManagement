<Window x:Class="FashionStoreManagement.Pages.DetailsWindow.CustomerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FashionStoreManagement.Pages.DetailsWindow"
        mc:Ignorable="d"
        Title="Customer Details" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        ResizeMode="NoResize" FontFamily="Poppins">

    <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="8" BorderBrush="{DynamicResource SecundaryBackgroundColor}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Customer ID -->
                <RowDefinition Height="Auto"/>
                <!-- Full Name -->
                <RowDefinition Height="Auto"/>
                <!-- Phone -->
                <RowDefinition Height="Auto"/>
                <!-- Email -->
                <RowDefinition Height="*"/>
                <!-- Address -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Nút Đóng (X) -->
            <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" IsCancel="True"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Panel.ZIndex="1"/>

            <TextBlock x:Name="lblTitle" Text="Add New Customer" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextColor}" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,20"/>

            <!-- Form Fields -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Customer ID:" Style="{DynamicResource TextBlockStyle}"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtCustomerId" Style="{DynamicResource TextBoxStyle}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Full Name:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtFullName" Style="{DynamicResource TextBoxStyle}" Margin="0,15,0,0" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtPhone" Style="{DynamicResource TextBoxStyle}" Margin="0,15,0,0" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Email:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtEmail" Style="{DynamicResource TextBoxStyle}" Margin="0,15,0,0"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Address:" Style="{DynamicResource TextBlockStyle}" Margin="0,15,10,0" VerticalAlignment="Top"/>
            <TextBox Grid.Row="5" x:Name="txtAddress" Style="{DynamicResource TextBoxStyle}" Margin="74,0,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="86" Grid.ColumnSpan="2"/>


            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="285">
                <Button x:Name="btnSave" Style="{StaticResource addButton}" Content="Save" Click="btnSave_Click"  Width="100" Margin="10,10,10,0" />

                <Button x:Name="btnCancel" Style="{StaticResource addButton}" Content="Cancel" IsCancel="True"  Width="100" Margin="10,10,10,0" />

            </StackPanel>

        </Grid>
    </Border>
</Window>