<Window x:Class="FashionStoreManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FashionStoreManagement"
        mc:Ignorable="d"
        Title="Login" Height="480" Width="380" 
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        ResizeMode="NoResize" FontFamily="Poppins">

    <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="8" MouseDown="Border_MouseDown">
        <Grid>
            <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0"/>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <Border Width="60" Height="60" Padding="3" Background="White" CornerRadius="100" Margin="0,0,0,10">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/logo.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>

                <TextBlock Text="Fashion Store" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryTextColor}" Margin="0,0,0,20"/>

                <TextBlock Text="Username" Style="{DynamicResource TextBlockStyle}"/>
                <TextBox x:Name="txtUsername" Style="{DynamicResource TextBoxStyle}"/>

                <TextBlock Text="Password" Margin="0,15,0,0" Style="{DynamicResource TextBlockStyle}"/>
                <PasswordBox x:Name="txtPassword" Style="{DynamicResource PasswordBoxStyle}"/>


                <TextBlock x:Name="txtErrorMessage" 
                           Foreground="Red" 
                           Margin="0,10,0,0" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center" />

                <Button x:Name="btnLogin" Content="Login" Foreground="#ffffff" Click="btnLogin_Click" 
                        Style="{StaticResource addButton}" Margin="0,10,0,0" Width="299" />

            </StackPanel>
        </Grid>
    </Border>
</Window>