<Window x:Class="FashionStoreManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FashionStoreManagement"
        mc:Ignorable="d"
        Title="Login - Fashion Store" Height="350" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="FASHION STORE" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#623ed0" Margin="0,0,0,30"/>

            <TextBlock Text="Username:" Margin="0,5"/>
            <TextBox x:Name="txtUsername" Padding="5"/>

            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Padding="5"/>

            <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click" Margin="0,20,0,0" Padding="10" Background="#623ed0" Foreground="White" FontWeight="Bold"/>

        </StackPanel>
    </Grid>
</Window>